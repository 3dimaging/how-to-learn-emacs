#!/bin/sh

# Replaces "<!-- Table of Contents -->" on stdin with html, generated by
# toc.awk, on stdout.

plain_toc=$1
chapter=$2  # toc.awk highlights this chapter.

html_toc=/tmp/toc.html.$$
trap "rm -f $html_toc" EXIT

$(dirname $0)/toc.awk current=$chapter < $plain_toc > $html_toc
sed -e "/-- Table of Contents --/ r $html_toc"
